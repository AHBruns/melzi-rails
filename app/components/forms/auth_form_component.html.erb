<%= form_with(
      url: url_for(action: @action, controller: @controller),
      class: "tracking-wider leading-tight text-gray-800 space-y-4"
    ) do |form| %>
  <%= render Inputs::LabeledFieldComponent.new(form: form, key: :email, label: "Email") do %>
    <%= render Inputs::EmailFieldComponent.new(
      form: form,
      name: :email,
      required: true,
      value: session.dig("auth_fields", "email")
    ) %>
  <% end %>
  <%= render Inputs::LabeledFieldComponent.new(form: form, key: :password, label: "Password") do %>
    <%= render Inputs::PasswordFieldComponent.new(
      form: form,
      name: :password,
      required: true,
      value: session.dig("auth_fields", "password")
    ) %>
  <% end %>
  <%= render Buttons::PrimaryButtonComponent.new(form: form).with_content("Submit") %>
  <% if flash[:error] %>
    <div class="text-red-500 text-sm mt-4"><%= flash[:error] %></div>
  <% end %>
<% end %>
