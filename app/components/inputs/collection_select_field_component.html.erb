<% if @object.present? %>
  <%= @form.collection_select(
    @object,
    @method,
    @collection,
    @value_method,
    @text_method,
    @options,
    @html_options.merge({ :class => "shadow-sm block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"})) %>
<% else %>
  <%= @form.collection_select(
    @method,
    @collection,
    @value_method,
    @text_method,
    @options,
    @html_options.merge({ :class => "shadow-sm block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md"})) %>
