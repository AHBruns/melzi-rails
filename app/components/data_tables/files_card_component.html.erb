<%= if @files.present?
      render DataTables::DataCardComponent.new do |comp|
        @files.each do |file|
          comp.data_row(
            key: file.blob.filename,
            value: render(Misc::StyledLinkToComponent.new(name: "Download", options: rails_blob_path(file, disposition: "attachment")))
          )
        end
      end
    else
      "None"
    end %>
