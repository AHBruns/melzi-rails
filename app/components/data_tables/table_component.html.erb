<!-- This example requires Tailwind CSS v2.0+ -->
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow-sm overflow-hidden border border-gray-300 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <% @headers.each do |header| %>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  <%= header %>
                </th>
              <% end %>
              <% @action_headers.each do |action_header| %>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only"><%= action_header %></span>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @rows.each_with_index do |cells, index| %>
              <% if index % 2 == 0 %>
                <tr class="bg-white">
              <% else %>
                <tr class="bg-gray-50">
              <% end %>
                <% cells.each do |cell| %>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= cell %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

